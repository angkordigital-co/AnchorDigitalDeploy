{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "paths": {
      "@core/*": ["./packages/core/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "sst.config.ts",
    "infra/**/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".sst"
  ]
}
